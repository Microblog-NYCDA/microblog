<%if @posts.length>=10%>
<%@posts=@posts.last(10)%>
<%end%>
<%@posts.reverse_each do |post|%>
<div class="wall-flex">
  <div class="wall-content">
  	<div class="wall-user">
  	<%=User.find(post.user_id).name%>
  		
  	</div>
    <div class="post-content"><%=post.content%></div>
    <div class="wall-comment">
      <a href='/post/<%=post.id%>'>Comment</a>
    </div>
  </div>
</div>

<%end%>


